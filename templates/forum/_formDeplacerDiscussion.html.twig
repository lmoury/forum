<div class="modal-header">
    <h5 class="modal-title" id="exampleModalTitle">
        Déplacer la discussion
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body-alert">
    <div class="alert alert-warning">
        <strong>Note:</strong> Veuillez sélectionner le forum ou la discussion doit être déplacée.
    </div>
</div>
<div class="modal-body">
    {{ form_start(form) }}
    <div class="">
       <dl class="formRow formRow-input">
           <dt>
               <label for="email">Destination la discussion : </label>
           </dt>
           <dd>
               <div class="form-group">
                   <div class="input-group mb-2">
                       {{ form_widget(form.categorie) }}
                       {{ form_errors(form.categorie) }}
                   </div>
               </div>
           </dd>
       </dl>
    </div>
    <div class="modal-footer">
        {{ form_rest(form) }}
        <div class="text-center btn-container">
            <button class="btn"><i class="fa fa-save"></i> {{ button|default('Sauvegarder')}}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
