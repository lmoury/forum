{{ form_start(form) }}
<div class="article-add-form">
    {% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        <i class="fa fa-warning"></i> <strong> Erreur !!!</strong> {{ message }}
    </div>
    {% endfor %}
    <div class="input-group mt-3 mb-3">
        {{ form_widget(form.titre, { 'attr': {'placeholder': 'Ajouter un titre'} }) }}
        {{ form_errors(form.titre) }}
    </div>
    <textarea class="editor form-control" name="tMessage" rows="5" id="tMessage">{% if discussion.message is defined %}{{ discussion.message}}{% endif %}</textarea>
</div>
<div class="block-container">
    {{ form_rest(form) }}
    <div class="text-center btn-container">
        <button class="btn"><i class="fa fa-edit fa-lg" aria-hidden="true"></i>{{ button|default('Cr√©er')}}</button>
    </div>
</div>
{{ form_end(form) }}
