{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    Editer la prefixe: <strong>{{ prefixe.prefix }}</strong>
{% endblock %}
{% block main %}
<div class="padding-admin">
    {{ include('admin/forum/prefixe/_form.html.twig', {form: form}) }}
    {% endblock %}
    {% block content_footer %}
    <div class="text-center btn-container float-right">
        <a href="{{ path('admin.prefixes') }}" class="btn mr-2"><i class="fa fa-fw fa-sign-out"></i></a>
        <span class="mr-2"><a class="btn btn-danger" href="#" data-title="Delete" data-toggle="modal" data-target="#delete" ><i class="fa fa-trash"></i></a></span>
        <button class="btn btn-primary">{{ button|default('Sauvegarder les modifications')}}</button>
    </div>
    <div class="clearfix"></div>
    {{ form_end(form) }}
</div>
<!-- modal delete -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    {{ include("inc/modal/modal_delete.html.twig", {signal : prefixe.id, route : 'admin.prefixes.delete'}) }}
</div>
{% endblock %}
